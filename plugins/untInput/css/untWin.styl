.untWinBG
	background rgba(0,0,0,0.5)
	left 0
	overflow auto
	position fixed
	text-align center
	top 0
	z-index 15000

.untWin a, .untWin a:visited
	color #777

.untWin a:hover 
	color #222

.untWin
	background-color #ccc
	border-radius 7px
	box-shadow 0px 0px 10px #555
	display inline-block
	height auto
	max-width 1200px
	padding 8px
	position relative
	transition top 1s ease
	top 0
	width auto

.untWinHeader
	background-color #121c29
	background-image linear-gradient(#121c29, #14495d)
	border thin solid black
	border-bottom none
	color #eee
	font-size 1.2em
	padding 5px 0
	padding-left 20px
	text-align left
	text-shadow #000 1px 1px 0px
	
.untWinClose
	color #DFBDBD
	cursor pointer
	float right
	font-size 0.9em
	margin-right 7px
	margin-top 4px

.untWinContent
	background-color white
	border thin solid #aaa
	border-bottom thin solid #ccc
	border-top none
	padding 10px 10px
	text-align left
	word-wrap break-word

.untWinFooter
	text-align center
	background-color #eee
	border thin solid #aaa
	border-top none
	padding 5px

	.untBtn
		font-size 0.9em
		margin 0 10px

.untWinImage
	max-height 65%
	max-width 100%